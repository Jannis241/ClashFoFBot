#!/bin/bash


find dataset_buildings/images/train -type f ! -name '.*' -delete
find dataset_buildings/images/val -type f ! -name '.*' -delete

find dataset_buildings/labels/train -type f ! -name '.*' -delete
find dataset_buildings/labels/val -type f ! -name '.*' -delete

find dataset_level/images/train -type f ! -name '.*' -delete
find dataset_level/images/val -type f ! -name '.*' -delete

find dataset_level/labels/train -type f ! -name '.*' -delete
find dataset_level/labels/val -type f ! -name '.*' -delete

find dataset_mauern/images/train -type f ! -name '.*' -delete
find dataset_mauern/images/val -type f ! -name '.*' -delete

find dataset_mauern/labels/train -type f ! -name '.*' -delete
find dataset_mauern/labels/val -type f ! -name '.*' -delete


# rm -rf dataset_level/data.yaml
# rm -rf dataset_buildings/data.yaml

rm -rf dataset_buildings/labels/train.cache
rm -rf dataset_buildings/labels/val.cache
rm -rf dataset_buildings/images/train.cache
rm -rf dataset_buildings/images/val.cache

rm -rf dataset_level/labels/train.cache
rm -rf dataset_level/labels/val.cache
rm -rf dataset_level/images/train.cache
rm -rf dataset_level/images/val.cache

rm -rf dataset_mauern/labels/train.cache
rm -rf dataset_mauern/labels/val.cache
rm -rf dataset_mauern/images/train.cache
rm -rf dataset_mauern/images/val.cache

# cp default_data.yaml dataset_level/data.yaml
# cp default_data.yaml dataset_buildings/data.yaml
